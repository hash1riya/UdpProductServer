<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UdpProductServer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:UdpProductServer.View"
    Shell.FlyoutBehavior="Flyout"
    Title="UdpProductServer">

    <FlyoutItem Title="Clients">
        <ShellContent ContentTemplate="{DataTemplate view:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Products">
        <ShellContent ContentTemplate="{DataTemplate view:ProductPage}"/>
    </FlyoutItem>

</Shell>
